<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--CircleImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="border_circle_width" format="dimension" />
        <attr name="border_circle_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="border_color" format="color" />
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EditTextPassword">
        <attr name="showPasswordIcon" format="reference" />
        <attr name="hidePasswordIcon" format="reference" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="fontPath" format="string" />
    </declare-styleable>
    <declare-styleable name="StateView">
        <!--加载动画-->
        <attr name="loadingViewAnimation" format="reference" />
        <!--加载提示-->
        <attr name="loadingText" format="string" />
        <!--空布局显示图片-->
        <attr name="emptyImage" format="reference" />
        <attr name="emptyText" format="string" />
        <!--断网显示图片-->
        <attr name="disConnectImage" format="reference" />
        <attr name="disConnectText" format="string" />
        <!-- 文字大小 -->
        <attr name="tipTextSize" format="dimension" />
        <!-- 文字颜色 -->
        <attr name="tipTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ColorfulProgressbar">
        <attr name="style" format="string|reference" />
        <attr name="animation" format="boolean" />
        <attr name="max" format="integer|reference" />
        <attr name="progress" format="integer|reference" />
        <attr name="secondProgress" format="integer|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="progressColor1" format="color|reference" />
        <attr name="progressColor2" format="color|reference" />
    </declare-styleable>
</resources>