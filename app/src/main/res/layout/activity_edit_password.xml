<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <include layout="@layout/divider_line" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:paddingLeft="10.0dip"
        android:text="13456789087"
        android:textColorHint="#ff999999"
        android:textSize="14.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10.0dip"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip">

        <EditText
            android:id="@+id/verify_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/hint_verify_register"
            android:inputType="phone"
            android:textColorHint="#ff999999"
            android:textSize="14.0sp"
            android:typeface="monospace" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/send_verify_code"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@drawable/textview_verfycode"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10.0dip"
        android:background="@color/divider_color" />

    <com.real.doctor.realdoc.widget.EditTextPassword
        android:id="@+id/new_password"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffffffff"
        android:hint="设置新密码"
        android:inputType="textPassword"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:textColorHint="#ff999999"
        android:textSize="14.0sp"
        android:typeface="monospace"
        app:hidePasswordIcon="@mipmap/hide_password"
        app:showPasswordIcon="@mipmap/show_password" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/divider_color" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="fill_parent"
        android:layout_height="43.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_marginTop="80.0dip"
        android:background="@drawable/button_selector"
        android:text="完成"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />
</LinearLayout>