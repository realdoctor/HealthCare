<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/doc_detail_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/doc_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="标题"
            android:textColor="@color/text_primary_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/doc_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doc_detail_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="内容"
            android:textColor="@color/text_secondary_color" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/doc_detail_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/doc_detail_relative"
        android:padding="10dp" />
</RelativeLayout>
