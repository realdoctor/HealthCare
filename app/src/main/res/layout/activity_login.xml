<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="192.0dip"
        android:background="@mipmap/login_bg">

        <ImageView
            android:id="@+id/login_dismiss"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="14.0dip"
            android:src="@mipmap/login_dismiss" />

        <ImageView
            android:layout_width="69.0dip"
            android:layout_height="72.0dip"
            android:layout_marginLeft="145.0dip"
            android:layout_marginTop="50.0dip"
            android:src="@mipmap/icon_app" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="44.0dip"
        android:background="@null"
        android:hint="@string/hint_username"
        android:inputType="phone"
        android:textColorHint="#ff999999"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14.0sp"
        android:typeface="monospace" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10.0dip"
        android:background="@color/divider_color" />

    <com.real.doctor.realdoc.widget.EditTextPassword
        android:id="@+id/userpassword"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@null"
        android:hint="@string/hint_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColorHint="#ff999999"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14.0sp"
        android:typeface="monospace"
        app:hidePasswordIcon="@mipmap/hide_password"
        app:showPasswordIcon="@mipmap/show_password" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="10.0dip"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45.0dip"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_login"
            android:layout_width="fill_parent"
            android:layout_height="43.0dip"
            android:layout_marginLeft="18.0dip"
            android:layout_marginRight="18.0dip"
            android:background="@drawable/button_selector"
            android:text="登录"
            android:textColor="#ffffffff"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="#ff03b5e5"
            android:textSize="13.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:src="@mipmap/divider_line" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ff999999"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_weixin"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginRight="58.0dip"
            android:src="@drawable/login_weixin_selector" />

        <ImageView
            android:id="@+id/login_weibo"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginRight="58.0dip"
            android:src="@drawable/login_weibo_selector" />

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:src="@drawable/login_qq_selector" />
    </LinearLayout>
</LinearLayout>