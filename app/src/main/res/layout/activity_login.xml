<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_app_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/login_frame"
            android:layout_width="275dp"
            android:layout_height="233dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_frame_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/et_underline_selector"
                android:gravity="center"
                android:hint="@string/hint_username"
                android:inputType="phone"
                android:textColorHint="@color/text2"
                android:textCursorDrawable="@drawable/color_cursor_bg"
                android:textSize="14.0sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/userpassword"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/et_underline_selector"
                android:gravity="center"
                android:hint="@string/hint_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColorHint="@color/text2"
                android:textCursorDrawable="@drawable/color_cursor_bg"
                android:textSize="14.0sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                android:text="忘记密码?"
                android:textColor="@color/app_globe_color"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/login_weixin"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_weixin_selector" />

                <ImageView
                    android:id="@+id/login_weibo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/login_weibo_selector" />

                <ImageView
                    android:id="@+id/login_qq"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/login_qq_selector" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn_bg"
            android:text="登 录"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="注 册"
        android:textColor="@color/app_globe_color"
        android:textSize="16.0sp" />

</LinearLayout>