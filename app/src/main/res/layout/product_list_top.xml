<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/appthemecolor"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:gravity="center_vertical"
        android:id="@+id/top_title"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/home_search"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/home_search_height"
            android:layout_toRightOf="@+id/finish_back"
            android:layout_toLeftOf="@+id/img_shop_cart"
            android:background="#ff03b5e5"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/search_text"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/home_searchText_height"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/search_background"
                android:drawableLeft="@mipmap/icon_search_gray"
                android:drawablePadding="10.0dip"
                android:gravity="center_vertical"
                android:hint="@string/search_hint"
                android:paddingLeft="10.0dip"
                android:textColorHint="@color/gray" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_shop_cart"
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/shop_cart_bg"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_height="25dp" />
    </RelativeLayout>

</RelativeLayout>
