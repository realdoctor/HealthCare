<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="68dp"
        android:layout_marginRight="15dp"
        android:background="#ccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text_gray_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/patient_name"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/patient_name"
            android:textColor="@color/text_gray_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/desease_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/desease_name"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:text="就诊疾病:"
            android:textColor="@color/text_gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/desease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hospital_name"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/desease_name_tv"
            android:textColor="@color/text_gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/visit_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/visit_date"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:text="就诊时间:"
            android:textColor="@color/text_gray_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/visit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desease_name"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/visit_date_tv"
            android:textColor="@color/text_gray_color"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>