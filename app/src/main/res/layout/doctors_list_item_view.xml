<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="68dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#ccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doctor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/doctor_name"
                android:layout_marginBottom="5dp"
                android:paddingRight="5dp"
                android:text="就诊医生:"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/doctor_name_tv"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hospital_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/hospital_name"
                android:layout_marginBottom="5dp"
                android:paddingRight="5dp"
                android:text="就诊医院:"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_name"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/hospital_name_tv"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desease_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/desease_name"
                android:layout_marginBottom="5dp"
                android:paddingRight="5dp"
                android:text="就诊疾病:"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hospital_name"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/desease_name_tv"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/visit_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/visit_date"
                android:layout_marginBottom="5dp"
                android:paddingRight="5dp"
                android:text="就诊时间:"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desease_name"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/visit_date_tv"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp">

        <com.real.doctor.realdoc.view.CircleImageView
            android:id="@+id/chat"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ease_default_avatar"
            app:border_circle_color="@android:color/white"
            app:border_circle_width="1.0dip" />

        <com.real.doctor.realdoc.view.CircleImageView
            android:id="@+id/upload"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ease_default_avatar"
            app:border_circle_color="@android:color/white"
            app:border_circle_width="1.0dip" />
    </LinearLayout>
</LinearLayout>