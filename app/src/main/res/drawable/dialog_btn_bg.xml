<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="false">

    <solid android:color="@color/appthemecolor" /> <!-- 定义填充的颜色值 -->

    <stroke
        android:width="1dp"
        android:color="@color/appthemecolor" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <corners android:radius="5dp" /> <!-- 设置四个角的半径 -->

    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" /> <!-- 设置各个方向的间隔 -->
</shape>